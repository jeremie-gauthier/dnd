{
  "type": "object",
  "description": "User schema",
  "properties": {
    "campaigns": {
      "type": "array",
      "items": {
        "type": "object",
        "description": "campaign",
        "properties": {
          "id": {
            "type": "string",
            "description": "campaign id"
          },
          "status": {
            "description": "the campaign status",
            "oneOf": [
              {
                "type": "object",
                "description": "LOCKED",
                "properties": {}
              },
              {
                "type": "object",
                "description": "OPENED"
              },
              {
                "type": "object",
                "description": "STARTED"
              },
              {
                "type": "object",
                "description": "COMING_SOON"
              }
            ]
          },
          "stages": {
            "type": "array",
            "items": {
              "type": "object",
              "description": "stage",
              "properties": {
                "id": {
                  "type": "string",
                  "description": "stage id"
                },
                "status": {
                  "oneOf": [
                    {
                      "type": "object",
                      "description": "LOCKED",
                      "properties": {}
                    },
                    {
                      "type": "object",
                      "description": "OPENED"
                    },
                    {
                      "type": "object",
                      "description": "COMING_SOON"
                    }
                  ],
                  "description": "stage status (is it unlocked ?)"
                }
              }
            },
            "description": "The stages available for this campaign"
          },
          "characters": {
            "type": "array",
            "items": {
              "type": "object",
              "description": "character",
              "properties": {
                "inventory": {
                  "type": "string",
                  "description": "The character’s inventory. Backpack & equipped items"
                },
                "healthPoints": {
                  "type": "string",
                  "description": "The character’s HP"
                },
                "healthPointsNatural": {
                  "type": "string",
                  "description": "The character’s base HP"
                },
                "...": {
                  "type": "string",
                  "description": "and so on for every other stats"
                }
              }
            },
            "description": ""
          }
        }
      },
      "description": "The list of available campaigns"
    }
  }
}

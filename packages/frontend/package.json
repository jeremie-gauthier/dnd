{
  "name": "@dnd/frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "start:dev": "concurrently \"npm run start:css\" \"tsr watch\" \"VITE_ENV=localhost vite --force\"",
    "start:css": "tailwindcss -i ./src/main.css -o ./src/generated.css --watch",
    "start:dev:network": "concurrently \"tsr watch\" \"VITE_ENV=local_network vite --force --host\"",
    "build": "tsc && npm run build:css && vite build --debug",
    "build:css": "NODE_ENV=production tailwindcss -o src/tailwind.css -m",
    "lint": "biome lint src/",
    "lint:fix": "biome lint src/ --apply",
    "preview": "vite preview",
    "format": "biome format src/ --write"
  },
  "dependencies": {
    "@auth0/auth0-react": "^2.2.4",
    "@dnd/shared": "file:../shared",
    "@headlessui/react": "^1.7.19",
    "@heroicons/react": "^2.1.3",
    "@tanstack/react-form": "^0.19.1",
    "@tanstack/react-query": "^5.29.2",
    "@tanstack/react-router": "^1.28.2",
    "@tanstack/router-cli": "^1.28.2",
    "@tanstack/zod-form-adapter": "^0.19.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "socket.io-client": "^4.7.5",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.7.0",
    "@tanstack/react-query-devtools": "^5.29.2",
    "@tanstack/router-devtools": "^1.28.2",
    "@types/react": "^18.2.79",
    "@types/react-dom": "^18.2.25",
    "@vitejs/plugin-basic-ssl": "^1.1.0",
    "@vitejs/plugin-react-swc": "^3.6.0",
    "concurrently": "^8.2.2",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.4.5",
    "vite": "^5.2.9"
  }
}

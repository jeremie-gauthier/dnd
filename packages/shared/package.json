{
  "name": "@dnd/shared",
  "private": true,
  "version": "1.0.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "commonjs",
  "scripts": {
    "build": "tsc",
    "format": "biome format src/ --write",
    "lint": "biome lint src/",
    "lint:fix": "biome lint src/ --apply",
    "prepublish": "npm run build",
    "publish": "sh ../../scripts/publish-shared.sh",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:cov": "vitest run --coverage"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.7.3",
    "typescript": "^5.4.5",
    "@vitest/coverage-v8": "^1.6.0",
    "vitest": "^1.6.0"
  },
  "dependencies": {
    "zod": "^3.23.8"
  }
}

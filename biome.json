{
  "$schema": "https://biomejs.dev/schemas/1.9.2/schema.json",
  "organizeImports": {
    "enabled": true,
    "ignore": ["**/*.gen.ts"]
  },
  "linter": {
    "ignore": ["node_modules/**"],
    "enabled": true,
    "rules": {
      "recommended": true,
      "performance": {
        "all": true
      },
      "style": {
        "noNonNullAssertion": "off",
        "noUselessElse": "off",
        "useImportType": "off"
      },
      "suspicious": {
        "noExplicitAny": "off"
      },
      "correctness": {
        "noUnusedImports": "error"
      }
    }
  },
  "formatter": {
    "ignore": ["**/*.gen.ts", "**/*.css"],
    "indentStyle": "space"
  },
  "javascript": {
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    }
  },
  "overrides": [
    {
      "include": [
        "shared/src/**",
        "src/openapi/**",
        "src/features/game/game-engine/**",
        "src/tailwind.css"
      ],
      "linter": {
        "rules": {
          "performance": {
            "noBarrelFile": "off",
            "noReExportAll": "off"
          },
          "suspicious": {
            "noDuplicateFontNames": "off"
          }
        }
      }
    }
  ]
}
